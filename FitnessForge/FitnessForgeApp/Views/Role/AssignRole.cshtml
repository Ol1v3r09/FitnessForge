@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Assign Role";
}

<h1>Assign Role to User</h1>

<form asp-action="AssignRole">
    <div class="form-group">
        <label for="userId">Select User:</label>
        <select class="form-control" id="userId" name="userId">
            @foreach (var user in ViewBag.Users)
            {
                 <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="roleName">Select Role:</label>
        <select class="form-control" id="roleName" name="roleName">
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.Name">@role.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
    <button asp-action="Index" type="submit" class="btn btn-primary">Back</button>
</form>
