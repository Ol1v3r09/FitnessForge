@model List<Product>

@foreach (var p in Model)
{
    <div class="container product">
        <div class="row bg-red text-orange fw-bold mt-3 m-1 p-2 rounded-3">
            <div class="col-4">
                <p>@($"{p.Brand} - {p.Name}")</p>
                <i class="fa-solid fa-angles-down" onclick="toggleHiddenDiv(this)"></i>
            </div>
            <div class="col-4">
                <label class="control-label">
                    <input name="amount" type="number" step="0.01" min="0" style="width: 3rem;" />
                    @p.Unit.Symbol
                </label>
            </div>
            <div class="col-4">
                <input type="hidden" value="@p.Id" name="productId" />
                <button class="btn btn-success rounded-circle add-item text-center" onclick="addItemToReceipt(this)">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="row hidden-div bg-red fw-bold text-orange m-1 p-1 rounded-3">
            <div class="row">
                <div class="col-3">
                    <p>Kalória (100g/ml)</p>
                </div>
                <div class="col-3">
                    <p>Szénhidrát</p>
                </div>
                <div class="col-3">
                    <p>Fehérje</p>
                </div>
                <div class="col-3">
                    <p>Zsír</p>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <p>@p.Calorie kcal</p>
                </div>
                <div class="col-3">
                    <p>@p.Carbohydrate g</p>
                </div>
                <div class="col-3">
                    <p>@p.Protein g</p>
                </div>
                <div class="col-3">
                    <p>@p.Fat g</p>
                </div>
            </div>
        </div>
    </div>
}