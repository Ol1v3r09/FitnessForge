@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div class="container text-orange text-center">
    <h1 class="fw-bolder">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <section class="bg-red w-50 rounded-3 p-3">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-warning" role="alert"></div>
                    <div class="form-group mb-3">
                        <h3 class="fw-bold">Felhasználónév</h3>
                        <div class="d-flex justify-content-center">
                            <input asp-for="Input.UserName" class="form-control form-control-thin" autocomplete="username" aria-required="true" placeholder="Felhasználónév"/>
                        </div>
                        <span asp-validation-for="Input.UserName" class="text-warning"></span>
                    </div>
                    <div class="form-group mb-3">
                        <h3 class="fw-bold">Jelszó</h3>
                        <div class="d-flex justify-content-center">
                            <input asp-for="Input.Password" class="form-control form-control-thin" autocomplete="current-password" aria-required="true" placeholder="Jelszó"/>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-warning"></span>
                    </div>
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <p class="fw-bold">Emlékezz rám?</p>
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="btn btn-success">Bejelentkezés</button>
                    </div>
                    <div class="mt-3">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary">Regisztráció</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
