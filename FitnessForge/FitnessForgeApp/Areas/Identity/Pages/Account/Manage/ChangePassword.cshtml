@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Jelszó váloztatás";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;}


<div class="container text-center">
    <h1 class="fw-bold my-3">@ViewData["Title"]</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group mb-3">
            <h3 class="fw-bold">Jelenlegi jelszó</h3>
            <div class="d-flex justify-content-center">
                <input asp-for="Input.OldPassword" class="form-control form-control-thin" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
            </div>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <h3 class="fw-bold">Új jelszó</h3>
            <div class="d-flex justify-content-center">
                <input asp-for="Input.NewPassword" class="form-control form-control-thin" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
            </div>
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <h3 class="fw-bold">Új jelszó megint</h3>
            <div class="d-flex justify-content-center">
                <input asp-for="Input.ConfirmPassword" class="form-control form-control-thin" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="w-25 btn btn-success">Jelszó frissítése</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
