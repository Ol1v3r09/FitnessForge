@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
    //TODO Design átalakítás
    //TODO egész manage nav átalakítása átgondolása mi kell mi nem
}

<div class="container text-center">
    <h1 class="fw-bold my-3">@ViewData["Title"]</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row d-flex justify-content-center">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <h3 class="fw-bold">Felhasználónév</h3>
                <div class="d-flex justify-content-center">
                    <input asp-for="Username" class="form-control form-control-thin" />
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
