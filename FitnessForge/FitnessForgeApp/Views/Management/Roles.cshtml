@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Szerepek</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<form method="get">
    <button asp-action="Create" type="submit" class="btn btn-primary">Új szerep létrehozása</button>
    <button asp-action="AssignRole" type="submit" class="btn btn-primary">Felahasználó szerephez rendelése</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Szerep neve</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
