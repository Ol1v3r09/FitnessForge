@page
@model EmailModel
@{
    ViewData["Title"] = "Email változtatás";
    ViewData["ActivePage"] = ManageNavPages.Email;
}


<div class="container text-center">
    <h1 class="fw-bold my-3">@ViewData["Title"]</h1>
    <partial name="_StatusMessage" for="StatusMessage" />
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        <div class="form-group mb-3">
                <h3 class="fw-bold">Email</h3>
                <div class="d-flex justify-content-center">
                <input asp-for="Email" class="form-control w-50" placeholder="Please enter your email." disabled />
                </div>
                    
                </div>
            <div class="form-group mb-3">
            <h3 class="fw-bold">Új Email</h3>
            <div class="d-flex justify-content-center">
                <input asp-for="Input.NewEmail" class="form-control w-50" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
            </div>
                
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-25 btn btn-success">Email megváltoztatása</button>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
