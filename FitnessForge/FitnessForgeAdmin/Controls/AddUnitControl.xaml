<UserControl x:Class="FitnessForgeAdmin.Controls.AddUnitControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessForgeAdmin.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="Mértékegység" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Content="Név:" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="1"/>

        <Button x:Name="btnSave" Grid.ColumnSpan="2" Grid.Row="2" Content="Mentés" Click="btnSave_Click"/>

    </Grid>
</UserControl>
